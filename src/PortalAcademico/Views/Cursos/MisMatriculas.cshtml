@model List<PortalAcademico.Models.Matricula>

@{
    ViewData["Title"] = "Mis Matrículas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-list-check"></i> Mis Matrículas
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Código</th>
                                        <th>Curso</th>
                                        <th>Créditos</th>
                                        <th>Horario</th>
                                        <th>Fecha Inscripción</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var matricula in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@matricula.Curso.Codigo</span>
                                            </td>
                                            <td>
                                                <strong>@matricula.Curso.Nombre</strong>
                                            </td>
                                            <td>
                                                <i class="bi bi-star-fill text-warning"></i> @matricula.Curso.Creditos
                                            </td>
                                            <td>
                                                <small>
                                                    <i class="bi bi-clock"></i>
                                                    @matricula.Curso.HorarioInicio.ToString(@"hh\:mm") - 
                                                    @matricula.Curso.HorarioFin.ToString(@"hh\:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <small>@matricula.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @switch (matricula.Estado)
                                                {
                                                    case EstadoMatricula.Pendiente:
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-clock-history"></i> Pendiente
                                                        </span>
                                                        break;
                                                    case EstadoMatricula.Confirmada:
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Confirmada
                                                        </span>
                                                        break;
                                                    case EstadoMatricula.Cancelada:
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle"></i> Cancelada
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Detalle" asp-route-id="@matricula.CursoId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Ver Curso
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Resumen de matrículas -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card bg-warning text-dark">
                            <div class="card-body text-center">
                                <h3>@Model.Count(m => m.Estado == EstadoMatricula.Pendiente)</h3>
                                <p class="mb-0">Pendientes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count(m => m.Estado == EstadoMatricula.Confirmada)</h3>
                                <p class="mb-0">Confirmadas</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count(m => m.Estado == EstadoMatricula.Cancelada)</h3>
                                <p class="mb-0">Canceladas</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-action="Catalogo" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Inscribirse en Más Cursos
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No tienes matrículas registradas</h4>
            <p>Explora el catálogo de cursos y comienza a inscribirte</p>
            <a asp-action="Catalogo" class="btn btn-primary btn-lg">
                <i class="bi bi-book"></i> Ver Catálogo de Cursos
            </a>
        </div>
    }
</div>