@model PortalAcademico.Models.ViewModels.CursosFiltroViewModel

@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">
            <i class="bi bi-book"></i> Catálogo de Cursos
            
            @* ✅ INDICADOR DE CACHE *@
            @if (ViewBag.DesdeCache == true)
            {
                <span class="badge bg-success ms-2" title="Datos obtenidos del cache Redis">
                    <i class="bi bi-lightning-charge-fill"></i> Cache
                </span>
            }
            else if (ViewBag.DesdeCache == false)
            {
                <span class="badge bg-info ms-2" title="Datos obtenidos de la base de datos">
                    <i class="bi bi-database"></i> BD
                </span>
            }
        </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Formulario de Filtros -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            <!-- Mostrar errores de validación si existen -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Catalogo" method="get">
                <div class="row g-3">
                    <!-- Nombre -->
                    <div class="col-md-4">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Buscar por nombre o código">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Créditos Mínimos -->
                    <div class="col-md-2">
                        <label asp-for="CreditosMin" class="form-label"></label>
                        <input asp-for="CreditosMin" type="number" class="form-control" min="0" max="10">
                        <span asp-validation-for="CreditosMin" class="text-danger"></span>
                    </div>

                    <!-- Créditos Máximos -->
                    <div class="col-md-2">
                        <label asp-for="CreditosMax" class="form-label"></label>
                        <input asp-for="CreditosMax" type="number" class="form-control" min="0" max="10">
                        <span asp-validation-for="CreditosMax" class="text-danger"></span>
                    </div>

                    <!-- Horario Desde -->
                    <div class="col-md-2">
                        <label asp-for="HorarioDesde" class="form-label"></label>
                        <input asp-for="HorarioDesde" type="time" class="form-control">
                        <span asp-validation-for="HorarioDesde" class="text-danger"></span>
                    </div>

                    <!-- Horario Hasta -->
                    <div class="col-md-2">
                        <label asp-for="HorarioHasta" class="form-label"></label>
                        <input asp-for="HorarioHasta" type="time" class="form-control">
                        <span asp-validation-for="HorarioHasta" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Catalogo" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados -->
    <div class="row">
        <div class="col-md-12">
            @if (Model.Cursos.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Se encontraron <strong>@Model.Cursos.Count</strong> cursos disponibles
                </div>

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var curso in Model.Cursos)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <span class="badge bg-primary">@curso.Codigo</span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title">@curso.Nombre</h6>
                                    <hr>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <strong>Créditos:</strong> @curso.Creditos
                                        </li>
                                        <li>
                                            <i class="bi bi-people-fill text-info"></i>
                                            <strong>Cupos:</strong> @curso.CuposDisponibles / @curso.CupoMaximo
                                        </li>
                                        <li>
                                            <i class="bi bi-clock-fill text-success"></i>
                                            <strong>Horario:</strong> @curso.HorarioInicio.ToString(@"hh\:mm") - @curso.HorarioFin.ToString(@"hh\:mm")
                                        </li>
                                    </ul>

                                    @if (curso.CuposDisponibles == 0)
                                    {
                                        <span class="badge bg-danger w-100 py-2">
                                            <i class="bi bi-x-circle"></i> SIN CUPOS
                                        </span>
                                    }
                                    else if (curso.CuposDisponibles <= 5)
                                    {
                                        <span class="badge bg-warning text-dark w-100 py-2">
                                            <i class="bi bi-exclamation-triangle"></i> POCOS CUPOS
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success w-100 py-2">
                                            <i class="bi bi-check-circle"></i> DISPONIBLE
                                        </span>
                                    }
                                </div>
                                <div class="card-footer bg-white">
                                    <a asp-action="Detalle" asp-route-id="@curso.Id" class="btn btn-primary w-100">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="bi bi-search" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">No se encontraron cursos</h4>
                    <p>Intenta ajustar los filtros de búsqueda</p>
                    <a asp-action="Catalogo" class="btn btn-primary">
                        Ver Todos los Cursos
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}